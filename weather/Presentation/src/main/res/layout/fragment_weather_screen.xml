<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- المحتوى الأساسي -->
    <FrameLayout
        android:id="@+id/contentLayoutLoadingMode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/contentLayout"
        android:background="@drawable/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/weatherStatusIcon"
                    android:visibility="gone"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center|bottom"
                    app:srcCompat="@drawable/w_ic25" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/currTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:text="19\u00B0 C" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/max_tem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:layout_marginEnd="12dp"
                        android:text="Max: 3\u00B0 C" />
                    <TextView
                        android:id="@+id/min_tem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:layout_marginStart="12dp"
                        android:text="Min: 4\u00B0 C" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/home"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="top"
                    app:srcCompat="@drawable/home" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Sheet -->

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_background"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/bottomSheetLoadingMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_sheet_background">
            </FrameLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/bottomSheetContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <LinearLayout
            android:id="@+id/todayLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/white"
                android:text="Today"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/today"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="13dp"
                android:textColor="@color/white"
                android:text="jun, 7"
                android:gravity="end"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"/>
        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/endColor">
        </View>
        <LinearLayout
            android:id="@+id/hourlyWeatherLayout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/cherven_left" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forecastRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"/>
            <ImageView
                android:id="@+id/right"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cherven_right" />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/airQualityLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/endColor"
            app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/rectangle_without_border"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/crosshair_ic"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/crosshair_ic" />
               <TextView
                   android:id="@+id/title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="#E8E6E6"
                   android:layout_marginStart="8dp"
                   android:layout_weight="1"
                   android:text="AIR QUALITY" />

           </LinearLayout>

            <TextView
                android:id="@+id/airQualityDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Moderate - Acceptable Air Quality" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/gradient_background">
            </View>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/less"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="See less" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/see_less_icon" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="See more" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/see_more_icon" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/sunStatusLayout"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/endColor"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_without_border"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center">
                       <ImageView
                           android:id="@+id/star_ic1"
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           app:srcCompat="@drawable/star_ic"
                           android:tint="@color/white" />
                       <TextView
                           android:id="@+id/sunRiseTitle"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:layout_marginStart="4dp"
                           android:textColor="#E8E6E6"
                           android:text="SUNRISE" />
                   </LinearLayout>
                    <TextView
                        android:id="@+id/sunRiseTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="5:28 PM" />
                    <TextView
                        android:id="@+id/sunsetTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textColor="#E8E6E6"
                        android:textSize="12sp"
                        android:text="Sunset: 7:30 PM" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/uv_layout"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/endColor"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_without_border"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/star_ic2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/star_ic"
                            android:tint="@color/white" />
                        <TextView
                            android:id="@+id/UV_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:textColor="#E8E6E6"
                            android:text="UV INDEX" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/uv_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="4" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/uv_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="Moderate" />
                        <ImageView
                            android:id="@+id/uvColor"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="2dp"
                            android:tint="#FFEB3B"
                            app:srcCompat="@drawable/circle_ic" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/aiAdvice"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/endColor"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/rectangle_without_border"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="start|center"
                                android:text="Make your day more pleasant! ">
                            </TextView>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/startBtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/button_shape"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_gravity="bottom"
                                    android:text="Get Start" />
                            </FrameLayout>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/robot"
                            android:layout_weight="1"
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:layout_margin="2dp"
                            android:layout_gravity="center|top"
                            app:srcCompat="@drawable/robot" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/aiAdviceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hello every one i am eman nasser mohamed
                     i seek for new opperatine forjjjkl kkdju ndhi tygewnmal "
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:paddingTop="20dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="20dp">
                </TextView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
